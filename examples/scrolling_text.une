# Scrolling Text

move = function(string)
{
	return string[1..] + string[0]
}

cursor = function(show)
{
	print("[?25{show ? "h" : "l"}")
}

text = "scrolling text! --- "
revolutions = 3
delay = 50 # ms between each step.

cursor(False)
for i from 0 till revolutions
	for j from 0 till len(text) {
		text = move(text)
		print("[F|{text}| {i+1}/{revolutions}[K")
		sleep(delay)
	}
cursor(True)
